<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/listado.css">
    <link rel="stylesheet" href="/css/nav_footer.css">
    <script src="/helpers.js"></script>
    <title>Document</title>
    <!-- archivo CSS de Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <!-- archivo JS de Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
</head>
<body>

    <!-- navbar -->
    <div class="containe">
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top mb-5">
        <div class="container">
          <a class="navbar-brand" href="/">¡El lado oscuro de las apuestas! </a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link" href="#"></a>
              </li>
              <li class="nav-item">
                <form action="/cartones/crear" method="POST">
                    <button class="nav-link btn btn-dark" type="submit">Crear cartones</button>
                </form>
              </li>
              <li class="nav-item" >
                <form action="/cartones/resetear" method="POST">
                <button class="nav-link btn btn-dark" type="submit">Resetear cartones</button>
            </form>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    </div>
   <div>
   <br>
  
  
   
      <h1 class="mt-5">Listado de cartones</h1>
      <div class="text-center">
      <h3 class="">Y los numeros Ganadores son...</h3>
      <span class="">
        <% ganadores.forEach(function(num) { %>
        </span>
        <span><%= num %></span>
      <% }); %>
    </div>
   <!-- div contenedor cartones -->
<div class="cartones-container">
    <% cartones.forEach(function(carton) { %>
        <div class="carton">
            <!-- número de serie del cartón -->
            <h3>Nro. serie: <%= carton.serie %></h3>
            <!-- coincidencias con los números ganadores -->
         
            <!-- números en una tabla de 3x5 -->
            <table>
              <tbody>
                <% for(let i = 0; i < 5; i++) { %>
                  <tr>
                    <% for(let j = 0; j < 3; j++) { %>
                      <td><%= carton.numeros[i*3 + j] %></td>
                    <% } %>
                  </tr>
                <% } %>
              </tbody>
            </table>
          </div>
          
    <% }); %>
  </div>


 
        <!-- footer -->
        <footer class="footer">
            <p>José Alvarado. Todos los derechos reservados &copy; 2023</p>
          </footer>
  </body>
</html>