      <h1>Listado de cartones</h1>
   <!-- div contenedor cartones -->
<div class="cartones-container">
    <% cartones.forEach(function(carton) { %>
      <div class="carton">
        <!-- número de serie del cartón -->
        <h3><%= carton.serie %></h3>
        <!-- números en una tabla de 3x5 -->
        <table>
          <tbody>
            <% for(let i = 0; i < 5; i++) { %>
              <tr>
                <% for(let j = 0; j < 3; j++) { %>
                  <td><%= carton.numeros[i*3 + j] %></td>
                <% } %>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    <% }); %>
  </div>
  <form action="/cartones/resetear" method="POST">
    <button type="submit">Resetear cartones</button>
  </form>
  
